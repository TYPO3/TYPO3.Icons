{% extends "_layout.html.twig" %}
{% block title %}{{ icon.identifier }} - {{ section.title }}{% endblock %}
{% block content %}

    <nav>
        <ul class="breadcrumb mb-0 text-muted bg-transparent p-0">
            <li class="breadcrumb-item"><a href="{{ pathPrefix }}index.html">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ pathPrefix }}icons/{{ section.folder }}.html">{{ section.title }}</a></li>
            <li class="breadcrumb-item">{{ icon.identifier }}</li>
        </ul>
    </nav>

    <div class="mb-4">
        <h1 class="h2 mb-2">{{ icon.identifier }}</h1>
        {% if icon.tags|length > 0 %}
            <p class="mb-1"><strong>Tags:</strong> {{ icon.tags|join(', ') }}</p>
        {% endif %}
    </div>

    {% if section.rendering.preview %}
        <div class="section">
            {% set colors = ['light', 'dark'] %}
            {% for color in colors %}
                <div class="preview">
                    {% set sizes = ['mega', 'large', 'default', 'small'] %}
                    {% for size in sizes %}
                        <div class="preview-item" data-color="{{ color }}" data-size="{{ size }}">
                            <span class="icon icon-size-{{ size }} icon-state-default{% if section.rendering.spinning %} icon-spin{% endif %}">
                                <span class="icon-markup">
                                    {% include '_symbol.html.twig' with { icon: icon } %}
                                </span>
                            </span>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if section.rendering.buttons %}
        <div class="section">
            <h2 class="mb-3">Buttons</h2>
            <p>
                <span class="btn btn-icon btn-default">
                    <span class="icon icon-size-small icon-state-default{% if section.rendering.spinning %} icon-spin{% endif %}">
                        <span class="icon-markup">
                            {% include '_symbol.html.twig' with { icon: icon } %}
                        </span>
                    </span>
                </span>
                <span class="btn btn-icon btn-dark">
                    <span class="icon icon-size-small icon-state-default{% if section.rendering.spinning %} icon-spin{% endif %}">
                        <span class="icon-markup">
                            {% include '_symbol.html.twig' with { icon: icon } %}
                        </span>
                    </span>
                </span>
            </p>
            <p>
                <span class="btn btn-icon btn-default">
                    <span class="icon icon-size-small icon-state-default{% if section.rendering.spinning %} icon-spin{% endif %}">
                        <span class="icon-markup">
                            {% include '_symbol.html.twig' with { icon: icon } %}
                        </span>
                    </span>
                    Button Label
                </span>
                <span class="btn btn-icon btn-dark">
                    <span class="icon icon-size-small icon-state-default{% if section.rendering.spinning %} icon-spin{% endif %}">
                        <span class="icon-markup">
                            {% include '_symbol.html.twig' with { icon: icon } %}
                        </span>
                    </span>
                    Button Label
                </span>
            </p>
        </div>
    {% endif %}

    {% if section.rendering.overlay %}
        <div class="section">
            <div class="preview">
                {% set mainIcons = ['apps-filetree-folder-default', 'apps-filetree-folder-temp', 'apps-pagetree-page'] %}
                {% for mainIcon in mainIcons %}
                    {% set colors = ['light', 'dark'] %}
                    {% for color in colors %}
                        {% set sizes = ['mega', 'large', 'default', 'small'] %}
                        {% for size in sizes %}
                            <div class="preview-item" data-color="{{ color }}" data-size="{{ size }}">
                                <span class="icon icon-size-{{ size }} icon-state-default{% if section.rendering.spinning %} icon-spin{% endif %}">
                                    <span class="icon-markup">
                                        <img src="{{ pathPrefix }}assets/icons/apps/{{ mainIcon }}.svg">
                                    </span>
                                    <span class="icon-overlay">
                                        {% include '_symbol.html.twig' with { icon: icon } %}
                                    </span>
                                </span>
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="section">
        <h2 class="mb-3">Markup</h2>
        <pre class="p-3 rounded bg-light"><code>{{ icon.inline|escape }}</code></pre>
    </div>

    <div class="section">
        <h2 class="mb-3">TYPO3 ViewHelper</h2>
        {% if section.rendering.overlay %}
            <pre class="p-3 rounded bg-light"><code>&lt;core:icon identifier=&quot;apps-pagetree-page&quot; overlay=&quot;{{ icon.identifier }}&quot; size=&quot;small&quot; /&gt;</code></pre>
        {% else %}
            <pre class="p-3 rounded bg-light"><code>&lt;core:icon identifier=&quot;{{ icon.identifier }}&quot; size=&quot;small&quot; /&gt;</code></pre>
        {% endif %}
    </div>

    {% if icon.alias|length > 0 %}
        <div class="section">
            <h2 class="mb-3">Alias</h2>
            <ul class="list-unstyled">
                {% for alias in icon.alias %}
                    <li>{{ alias }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

{% endblock %}
