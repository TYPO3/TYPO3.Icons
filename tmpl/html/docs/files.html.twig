{% extends "_layout.html.twig" %}
{% block title %}Files{% endblock %}
{% block content %}

    {% set folder = folders.files %}
    {% include '_header.html.twig' with {'folder': folder} %}

    <div class="card-group-element card-group-element-columns-4">
        {% for icon in folder.icons %}
            <div class="card-group-element-item">
                <div class="card">
                    <div class="card-header">{{ icon.file|replace({'.svg': ''}) }}</div>
                    <div class="card-body text-center">
                        <span class="icon icon-size-mega icon-state-default" title="{{ icon.file|replace({'.svg': ''}) }}">
                            <span class="icon-markup">
                                <img src="images/{{ folder.folder }}/{{ icon.file }}" height="64" width="64">
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
