{% extends "_layout.html.twig" %}
{% block title %}{{ section.title }}{% endblock %}
{% block content %}

    <nav>
        <ul class="breadcrumb mb-0 text-muted bg-transparent p-0">
            <li class="breadcrumb-item"><a href="{{ pathPrefix }}index.html">Home</a></li>
            <li class="breadcrumb-item">{{ section.title }}</li>
        </ul>
    </nav>

    <h1 class="h2 mb-4">
        {{ section.title }}
        <small class="text-muted">{{ section.count }}</small>
    </h1>
    <div class="icongrid">
        {% for icon in section.icons %}
            <a class="icongrid-item bg-light" href="{{ pathPrefix }}{{ section.folder }}/{{ icon.identifier }}.html" title="{{ icon.identifier }}">
                <span class="icon icon-size-default icon-state-default{% if rendering.spinning %} icon-spin{% endif %}">
                    {% if not rendering.overlay %}
                        <span class="icon-markup">
                            {{ icon.inline }}
                        </span>
                    {% else %}
                        <span class="icon-markup">
                            <img src="{{ pathPrefix }}images/apps/apps-pagetree-page.svg">
                        </span>
                        <span class="icon-overlay">
                            {{ icon.inline }}
                        </span>
                    {% endif %}
                </span>
            </a>
        {% endfor %}
    </div>

{% endblock %}
