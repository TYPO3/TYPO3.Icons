# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JS-Files
[*.js]
indent_style = space
indent_size = 4

# SVG-Files
[*.svg]
indent_style = tab
indent_size = 4

# TWIG-Files
[*.twig]
indent_style = space
indent_size = 4

# JSON-Files
[*.json]
indent_style = space
indent_size = 2

# MD-Files
[*.md]
indent_style = space
indent_size = 4
